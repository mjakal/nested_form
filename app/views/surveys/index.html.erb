<h1>Surveys</h1>

<% @surveys.each do |survey| %>
  <div class="article">
    <h2><%= link_to survey.name, survey %></h2>
    <%= pluralize(survey.questions.size, "Question") %><br/>
    <%= link_to "Delete survey", survey_path(survey), method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
<% end %>

<p><%= link_to 'New Survey', new_survey_path %></p>